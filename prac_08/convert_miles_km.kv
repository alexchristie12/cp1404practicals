BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: miles_text_input
            size_hint_x: 0.75
            font_size: 44
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                id: up_button
                text: "Up"
                font_size: 36
                on_press: app.handle_increment(1)
            Button:
                id: down_button
                text: "Down"
                font_size: 36
                on_press: app.handle_increment(-1)
    Button:
        id: convert_button
        text: 'Convert miles to km'
        font_size: 36
        on_press: app.handle_new_value()
    Label:
        id: output_label
        background_color: (0, 0, 0, 1)
        color: (1, 1, 0, 1)
        font_size: 54
        text: 'test'

